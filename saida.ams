syscall
addiu $sp, $sp, -4
sw    $v0, 0($sp)
# fim comando leia
lw    $t0, 0($sp) # atribuindo à variável global idade
la    $t1, idade
sw    $t0, 0($t1)
lw    $s0, 0($sp)
addiu $sp, $sp, 4
li    $v0, 11 # novaLinha
li    $a0, 10
syscall       # fim novaLinha
