.text
.globl main
main:
addi  $sp, $sp, -4 # reservando espaço próxima variável letra
addi  $sp, $sp, 4 # corrige ponteiro $sp
la    $s0, UODDMPQKLVAXYRBHQMIL # empilhando endereço de string literal
addiu $sp, $sp, -4
sw    $s0, 0($sp)
# inicio escreva
li    $v0, 4
